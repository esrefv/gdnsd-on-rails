<div class="container" >
	<div  class="row "> 
		<div class="col-md-12">
			<%= form_for [@domain, @domain.records.new] , html: {class: 'form-inline' } do |f| %>

				<div class="form-group hidden ">
					<%= f.label :domain_id ,type:'label', class: 'sr-only' %>
					<%= f.text_field :domain_id, type:'input', class:'form-control input-sm',size:'3',readonly: :true, :placeholder => t('domain_id')%>
				</div>
				<div class="form-group">
					<%= f.label :name ,type:'label', class:'sr-only' %>
					<%= f.text_field :name , class:'form-control input-sm', :placeholder => t('activerecord.attributes.record.record_name')%>
				</div>
				<div class="form-group">
					<%= f.label :rtype ,type:'label', class:'sr-only'%>
					<%=  f.select :rtype , options_for_select(@domain.records.rtypes.collect{|r| [r[0].humanize.upcase,r[0]]},selected: @record.rtype),{}, class:'form-control input-sm rtype',id:'record_type' %>
				</div>
				<div class="form-group">
					<%= f.label :content ,type:'label', class:'sr-only' %>
					<%= f.text_field :content ,type:'input', class:'form-control input-sm', :placeholder => t('activerecord.attributes.record.content')%>
				</div>
				<div class="form-group">
				<%= f.label :ttl, type:'label', class:'sr-only' %>
					<%= f.text_field :ttl ,type:'number', class:'form-control input-sm', :placeholder => t('activerecord.attributes.record.ttl')%>
				</div>
				<div class="form-group tog">
					<%= f.label :prio , type:'label', class:'sr-only' %>
					<%= f.text_field :prio , type:'number', class:'form-control input-sm prio hidden',id:'prio', :placeholder => t('activerecord.attributes.record.prio')%>
				</div>
				<div class="form-group">
					<%= f.submit t('activerecord.attributes.record.add'), class:'btn btn-info input-sm button' %>
				</div>
				
			<% end %>
		</div> 
		<hr>
	</div>
</div>
