<div class="container" >
	<div  class="row "> 
		<div class="col-md-12">
			<%= form_for [@domainn, @record] , html: {class:'form-inline'} do |f| %>

				<div class="form-group">
					<%= f.label :domain_id ,type:'label',class:'sr-only' %>
					<%= f.text_field :domain_id ,type:'input', class:'form-control input-sm', placeholder:'Domain Id'%>
				</div>
				<div class="form-group">
					<%= f.label :name ,type:'label',class:'sr-only' %>
					<%= f.text_field :name , class:'form-control input-sm', placeholder:' Record Name'%>
				</div>
				<div class="form-group">
					<%= f.label :rtype ,type:'label',class:'sr-only' %>
					<%=  f.select :rtype , options_for_select(@domainn.records.rtypes.collect{|r| [r[0].humanize,r[0]]},selected: @record.rtype),{},class:'form-control input-sm'%>
				</div>
				<div class="form-group">
					<%= f.label :content ,type:'label',class:'sr-only' %>
					<%= f.text_field :content ,type:'input',	class:'form-control input-sm', placeholder:'Content'%>
				</div>
				<div class="form-group">
				<%= f.label :ttl ,type:'label',class:'sr-only' %>
					<%= f.text_field :ttl ,type:'input',	class:'form-control input-sm', placeholder:'TTL'%>
				</div>
				<%#- if %>
				<div class="form-group">
					<%= f.label :prio ,type:'label',class:'sr-only' %>
					<%= f.text_field :prio ,type:'input',	class:'form-control input-sm', placeholder:'Prio'%>
				</div>
				<br><br>
				<div class="col-md-5 col-md-offset-4">
					<div class="form-group">
						<%= f.submit 'Send' ,class:'btn btn-default input-sm' %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
