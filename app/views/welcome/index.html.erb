<div class="row" >
  <div class="col-md-4 col-xs-4 col-xs-offset-2 col-md-offset-4">
    <%= image_tag "big-logo.png", class:'main-logo' %>
  </div>
</div>
<%= form_tag search_domains_path, method: :get, role: "search" do %>
  <div class="row">
  	<div class=" col-sm-6 col-sm-offset-3 ">
      <div class="form-group">
        <%= text_field_tag :search, params[:search],:placeholder => t('search_with_domain_name'), class: "form-control input-md" %>
  	  </div>
  	</div>
  <div class="row">
  	<div class="col-sm-2 col-xs-3 col-md-offset-3 col-xs-offset-1 ">	
      <%= link_to  t('new_domain'), new_domain_path %>
  	</div>
  	<div class="col-sm-1 col-xs-1 col-xs-offset-5 col-md-offset-3">
  		 <%= button_tag(type:"submit",class:"btn btn-default") do  %>
          <%= t('search')%>
       <% end%>
  	</div>
  </div>
  </div>
<% end %>
  <div class="row">
      <div class="col-md-4 col-xs-offset-3 col-md-offset-5 text-info">
        <h1> <%= @domains.count %> <small><%= t'total_domain' %></small></h1>
        <div class="" style="">
          <h5><span class="">  <%#= @domains.count %></span><strong></strong></h5>
        </div>
      </div>
  </div>
