<%= form_tag search_domains_path, method: :get, role: "search" do %>
  <div class="row">
  	<div class=" col-sm-6 col-sm-offset-3 ">
      <div class="form-group">
        <%= text_field_tag :search, params[:search],:placeholder => t('search_with_domain_name'), class: "form-control input-md" %>
  	  </div>
  	</div>
  </div>
  <div class="row">
  	<div class="col-sm-2 col-xs-4 col-md-offset-3 ">	
      <%= link_to  t('new_domain'), new_domain_path %>
  	</div>
  	<div class="col-sm-1 col-xs-1 col-xs-offset-6 col-md-offset-3">
  		 <%= button_tag(type:"submit",class:"btn btn-default") do  %>
          <%= t('search')%>
       <% end%>
  	</div>
  </div>
<% end %>
  <div class="row">
      <div class="col-md-4 col-xs-offset-3 col-md-offset-5" style="margin-top: 160px; width: 100px">
        <div class="btn btn-primary" style="width: 250px">
          <h5><strong><%= t'.total_domain' %></strong> <span class="badge"><%= @domains.count %></span></h5>
        </div>
      </div>
  </div>
