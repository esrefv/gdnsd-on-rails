<div class="row">
	<h3><%= @domain.name %>  <%= link_to t('delete') , domain_path(@domain), method: :delete ,class:'btn btn-danger' %></h3> 
  	<div class="col-md-8 col-md-offset-1">
		<div class="show_form" id="form">
			<%= render 'records/form' %>
		</div>
	</div>
	<div class="col-md-8 col-xs-8 col-xs-offset-2 col-md-offset-2">
		<div>
		  	<div class="table">
			   <table class="table table-bordered table-hover">
				    <thead>
				      <tr>
				        <th><%= t 'ID' %></th>
				        <th><%= t 'record_name' %></th>
				        <th><%= t 'record_type' %></th>
				        <th><%= t 'content' %></th>
				        <th><%= t 'TTL' %></th>
				        <th><%= t 'prio' %></th>			
				      </tr>
				    </thead>
				    <tbody>
				     <% @domainn.records.reject{|r| r.id.nil? }.each do |record| %>
				      <tr>
				        <td><%= record.id %></td>
				        <td><%= record.name %></td>
				        <td><%= record.rtype %></td>
				        <td><%= record.content %></td>
				        <td><%= record.ttl %></td>
				        <td><%= record.prio %></td>
				        <td><%= link_to t('delete') , [record.domain,record], method: :delete ,class:'btn btn-danger' %></td>
				      </tr>
				    <%end%>
				    </tbody>
				  </table>
			</div>
		</div>
	<%= link_to 'Back', root_path %>
	</div>
</div>


