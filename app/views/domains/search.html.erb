<div class="row">
 <div class="col-md-8 col-md-offset-2">
	<h3><%=  t('search_results') %></h3>
	   <h4> </h4>
  <div class="table">
	<table class="table table-bordered">
	    <thead>
	      <tr>
	        <th><%= t('domain_name') %></th>
	        <th><%= t 'number_of_record' %></th>		
	      </tr>
	    </thead>
	  <% @domains.each do |domain| %>
	    <tbody>
	      <tr>
	        <td><%=link_to  domain.name,domain_path(domain)  %></td>
	        <td><%= domain.records.count %></td>
	      </tr>
	    </tbody>
	  <% end %>
	</table>

  </div>
</div>